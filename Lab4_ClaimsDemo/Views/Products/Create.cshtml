@model Lab4_ClaimsDemo.Models.Product
@{
    ViewData["Title"] = "Danh sách Sản phẩm";

    // SỬA LOGIC Ở ĐÂY:
    // Kiểm tra claim Admin hoặc Sales
    var isAdmin = User.HasClaim("Admin", "true");
    var isSales = User.HasClaim("Sales", "true"); 
    var canCreate = isAdmin || isSales;

    bool isLoggedIn = User?.Identity?.IsAuthenticated ?? false;
}

@if (ViewBag.Errors != null)
{
    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <i class="fa-solid fa-triangle-exclamation me-2"></i>
        <div>
            <strong>Đã xảy ra lỗi!</strong>
            <ul>
                @foreach (var err in ViewBag.Errors)
                {
                    <li>@err</li>
                }
            </ul>
        </div>
    </div>
}

@if (isLoggedIn && canCreate)
{
    <form asp-action="Create" enctype="multipart/form-data" method="post">
        <div class="row g-4">
            <div class="col-md-6">
                <h5 class="mb-3"><i class="fa-solid fa-info-circle me-2"></i>Thông tin cơ bản</h5>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Tên sản phẩm</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa-solid fa-tag"></i></span>
                        <input asp-for="Name" class="form-control" placeholder="Ví dụ: iPhone 15 Pro Max" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger small mt-1"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-bold">Giá sản phẩm</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fa-solid fa-dollar-sign"></i></span>
                        <input asp-for="Price" class="form-control" type="number" placeholder="Ví dụ: 30000000" />
                    </div>
                    <span asp-validation-for="Price" class="text-danger small mt-1"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Mô tả chi tiết</label>
                    <div class="input-group">
                         <span class="input-group-text"><i class="fa-solid fa-align-left"></i></span>
                        <textarea asp-for="Description" class="form-control" rows="5" placeholder="Nhập mô tả về sản phẩm..."></textarea>
                    </div>
                    <span asp-validation-for="Description" class="text-danger small mt-1"></span>
                </div>
            </div>

            <div class="col-md-6">
                <h5 class="mb-3"><i class="fa-solid fa-images me-2"></i>Hình ảnh sản phẩm</h5>
                
                <label for="Images" class="form-label image-upload-box text-center p-4 border-2 border-dashed rounded-3 w-100 cursor-pointer">
                    <i class="fa-solid fa-cloud-arrow-up fa-3x text-muted mb-2"></i>
                    <h6 class="mb-1">Kéo và thả ảnh vào đây</h6>
                    <p class="text-muted small mb-0">hoặc nhấn để chọn ảnh (có thể chọn nhiều ảnh)</p>
                </label>
                <input type="file" name="Images" id="Images"
                       class="form-control d-none" accept="image/*"
                       multiple onchange="previewImages(event)" />
                <span class="text-danger small mt-1">@ViewBag.ImageError</span>

                <div id="previewContainer" class="mt-3 d-flex flex-wrap gap-2">
                     <div id="placeholder" class="text-muted fst-italic">Chưa có ảnh nào được chọn</div>
                </div>
            </div>
        </div>
        
        <hr class="my-4" />

        <div class="d-flex justify-content-end gap-2">
            <a asp-action="Index" class="btn btn-lg btn-secondary px-4"><i class="fa-solid fa-arrow-left me-2"></i> Quay lại</a>
            <button type="submit" class="btn btn-lg btn-primary px-4"><i class="fa-solid fa-save me-2"></i> Lưu sản phẩm</button>
        </div>
    </form>
}
else
{
    <div class="alert alert-warning mt-4">
        <i class="fa-solid fa-lock me-2"></i> Bạn không có quyền thêm sản phẩm.
    </div>
}

@section Scripts {
    <script>
        function previewImages(event) {
            const container = document.getElementById('previewContainer');
            const placeholder = document.getElementById('placeholder');
            container.innerHTML = ""; // Xóa các ảnh preview cũ
            
            const files = event.target.files;

            if (files.length === 0) {
                 container.appendChild(placeholder); 
                 return;
            }

            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                if (file.type.startsWith("image/")) {
                    const imgWrapper = document.createElement("div");
                    imgWrapper.classList.add("img-preview-wrapper");

                    const img = document.createElement("img");
                    img.src = URL.createObjectURL(file);
                    img.classList.add("img-thumbnail", "img-preview");
                    
                    imgWrapper.appendChild(img);
                    container.appendChild(imgWrapper);
                }
            }
        }
    </script>
}
