@model Lab4_ClaimsDemo.Models.Product
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService Authz

@{
    ViewData["Title"] = Model.Name; // Đặt tiêu đề trang là tên sản phẩm
    var canEdit = User.IsInRole("Admin"); // Đơn giản hóa kiểm tra quyền Admin

    // Gom tất cả ảnh (ảnh chính + phụ) vào một danh sách
    var allImages = new List<string>();
    if (!string.IsNullOrEmpty(Model.MainImage))
    {
        allImages.Add(Model.MainImage);
    }
    if (Model.Images != null && Model.Images.Any())
    {
        allImages.AddRange(Model.Images.Select(i => i.ImageUrl));
    }
}

<div class="container my-4 my-lg-5">
    
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Sản phẩm</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row g-4 g-lg-5">
        <div class="col-lg-7">
            @if (allImages.Any())
            {
                <div class="product-gallery d-flex">
                    @if (allImages.Count > 1)
                    {
                        <div class="thumbnail-list d-flex flex-column gap-2 me-3">
                            @for (int i = 0; i < allImages.Count; i++)
                            {
                                <img src="@allImages[i]"
                                     class="img-thumbnail thumbnail-item @(i == 0 ? "active" : "")"
                                     data-bs-target="#productCarousel" data-bs-slide-to="@i"
                                     alt="Thumbnail @(i+1)" />
                            }
                        </div>
                    }
                    
                    <div id="productCarousel" class="carousel slide flex-grow-1 shadow-sm rounded overflow-hidden" data-bs-ride="carousel" data-bs-interval="false">
                        <div class="carousel-inner">
                            @for (int i = 0; i < allImages.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@allImages[i]" class="d-block w-100 product-main-image" alt="Product Image @(i+1)">
                                </div>
                            }
                        </div>
                        @if (allImages.Count > 1)
                        {
                            <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        }
                    </div>
                </div>
            }
            else
            {
                <img src="/images/no-image.png" class="img-fluid shadow rounded" alt="No Image Available" />
            }
        </div>

        <div class="col-lg-5">
            <h1 class="display-5 fw-bold">@Model.Name</h1>
            <div class="d-flex align-items-center mb-3">
                <span class="badge bg-success me-2">Còn hàng</span>
                <span class="text-muted small">Mã SP: SP@Model.Id.ToString("D4")</span>
            </div>

            <div class="price-display bg-light p-3 rounded mb-4">
                <span class="fs-2 fw-bolder text-danger">@Model.Price.ToString("N0") VNĐ</span>
                <span class="text-muted text-decoration-line-through ms-2">@((Model.Price * 1.2m).ToString("N0")) VNĐ</span>
            </div>
            
            <div class="mb-4">
                <h5 class="fw-bold">Mô tả sản phẩm</h5>
                <p class="text-secondary">@Model.Description</p>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <button type="button" class="btn btn-danger btn-lg w-100 py-3 fw-bold" data-bs-toggle="modal" data-bs-target="#qrModal">
                            <i class="fa-solid fa-cart-shopping me-2"></i> MUA NGAY
                        </button>
                    }
                    else
                    {
                        <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Context.Request.Path" class="btn btn-danger btn-lg w-100 py-3 fw-bold">
                            <i class="fa-solid fa-right-to-bracket me-2"></i> Đăng nhập để mua hàng
                        </a>
                    }
                </div>
            </div>
            
            @if (canEdit)
            {
                <div class="p-3 bg-light-warning rounded">
                    <h6 class="fw-bold text-dark"><i class="fa-solid fa-user-shield me-2"></i>Bảng điều khiển Admin</h6>
                    <div class="d-flex gap-2 mt-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary flex-grow-1"><i class="fa-solid fa-pencil me-1"></i> Sửa</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger flex-grow-1"><i class="fa-solid fa-trash-can me-1"></i> Xóa</a>
                    </div>
                </div>
            }

            <div class="mt-4">
                 <a asp-action="Index" class="btn btn-link text-secondary"><i class="fa-solid fa-arrow-left me-2"></i>Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="qrModal" tabindex="-1" aria-labelledby="qrModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="qrModalLabel"><i class="fa-solid fa-qrcode me-2"></i>Thanh toán đơn hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-4">
                <p class="mb-1">Vui lòng quét mã QR dưới đây để thanh toán cho sản phẩm:</p>
                <h6 class="fw-bold">@Model.Name</h6>
               
                <div class="alert alert-success">
                    <strong class="fs-4">@Model.Price.ToString("N0") VNĐ</strong>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>


@section Styles {
    <style>
        .product-main-image {
            aspect-ratio: 1 / 1;
            object-fit: contain; /* Sử dụng contain để ảnh không bị cắt */
            background-color: #f8f9fa;
        }

        .thumbnail-list {
            max-height: 500px; /* Giới hạn chiều cao của list thumbnail */
            overflow-y: auto;
        }

        .thumbnail-item {
            width: 80px;
            height: 80px;
            object-fit: cover;
            cursor: pointer;
            border: 2px solid transparent;
            transition: border-color 0.3s ease;
        }

        .thumbnail-item.active,
        .thumbnail-item:hover {
            border-color: #0d6efd;
        }
        
        .bg-light-warning {
            background-color: #fff3cd;
        }
    </style>
}